.evaluation-form {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: var(--border-radius);
  padding: 0 20rpx;
  box-sizing: border-box;
}

.input-error {
  border-color: #ff4d4f;
}

.radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.radio-label {
  padding: 16rpx 30rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: var(--border-radius);
  font-size: 28rpx;
}

.radio-label.selected {
  border-color: var(--primary-color);
  color: var(--primary-color);
  background-color: rgba(18, 150, 219, 0.1);
}

.skill-item {
  margin-bottom: 30rpx;
}

.skill-header {
  margin-bottom: 16rpx;
}

.skill-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.skill-desc {
  font-size: 24rpx;
  color: var(--text-color-light);
}

.skill-rating {
  display: flex;
  gap: 20rpx;
}

.rating-item {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #e8e8e8;
  border-radius: var(--border-radius);
  font-size: 32rpx;
}

.rating-item.selected {
  background-color: var(--primary-color);
  color: #ffffff;
  border-color: var(--primary-color);
}

.error-text {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: var(--primary-color);
  color: #ffffff;
  border-radius: var(--border-radius);
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn[disabled] {
  opacity: 0.6;
}