.match-card {
  background: #ffffff;
  border-radius: var(--border-radius);
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--card-shadow);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.info-content {
  flex: 1;
}

.name-level {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.level {
  font-size: 24rpx;
  color: var(--primary-color);
  background: rgba(18, 150, 219, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.styles {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.style-tag {
  font-size: 24rpx;
  color: var(--text-color-light);
  background: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
}

.match-score {
  text-align: center;
}

.score {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
  display: block;
}

.score-label {
  font-size: 24rpx;
  color: var(--text-color-light);
}

.schedule-preview {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 2rpx solid #f5f5f5;
}

.schedule-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  display: block;
}

.schedule-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.schedule-item {
  display: flex;
}

.day {
  width: 80rpx;
  font-size: 24rpx;
  color: var(--text-color-light);
}

.times {
  flex: 1;
  font-size: 24rpx;
}

.actions {
  margin-top: 30rpx;
  display: flex;
  justify-content: flex-end;
}

/* 约战弹窗样式 */
.match-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.match-dialog.show {
  visibility: visible;
  opacity: 1;
}

.dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.dialog-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx 30rpx;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.match-dialog.show .dialog-content {
  transform: translateY(0);
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.dialog-title {
  font-size: 36rpx;
  font-weight: bold;
}

.dialog-close {
  font-size: 48rpx;
  color: var(--text-color-light);
  line-height: 1;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  margin-bottom: 16rpx;
  display: block;
}

.picker {
  height: 88rpx;
  background: #f5f5f5;
  border-radius: var(--border-radius);
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}

.placeholder {
  color: var(--text-color-light);
}

.input {
  height: 88rpx;
  background: #f5f5f5;
  border-radius: var(--border-radius);
  padding: 0 30rpx;
}

.textarea {
  width: 100%;
  height: 200rpx;
  background: #f5f5f5;
  border-radius: var(--border-radius);
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.dialog-footer {
  margin-top: 40rpx;
  display: flex;
  gap: 20rpx;
}

.dialog-footer .btn {
  flex: 1;
}