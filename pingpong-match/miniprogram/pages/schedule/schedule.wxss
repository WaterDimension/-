.schedule-page {
  min-height: 100vh;
  background: var(--background-color);
  padding: 20rpx;
}

.schedule-list {
  margin-top: 30rpx;
  background: #ffffff;
  border-radius: var(--border-radius);
  padding: 30rpx;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.date-text {
  font-size: 32rpx;
  font-weight: bold;
}

.btn-small {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  height: auto;
  line-height: 1.5;
}

.schedule-items {
  min-height: 200rpx;
}

.schedule-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: var(--border-radius);
  margin-bottom: 20rpx;
}

.item-content {
  flex: 1;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

.time {
  font-size: 28rpx;
  color: var(--text-color-light);
}

.location {
  font-size: 28rpx;
  color: var(--text-color-light);
  margin-bottom: 8rpx;
}

.notes {
  font-size: 28rpx;
  color: var(--text-color-light);
}

.delete-btn {
  padding: 10rpx 30rpx;
  color: #ff4d4f;
  font-size: 28rpx;
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
  color: var(--text-color-light);
  font-size: 28rpx;
}

/* 日程表单样式 */
.schedule-form {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.schedule-form.show {
  visibility: visible;
  opacity: 1;
}

.form-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.form-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx 30rpx;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.schedule-form.show .form-content {
  transform: translateY(0);
}

.form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
}

.form-close {
  font-size: 48rpx;
  color: var(--text-color-light);
  line-height: 1;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  margin-bottom: 16rpx;
  display: block;
}

.input,
.picker {
  height: 88rpx;
  background: #f5f5f5;
  border-radius: var(--border-radius);
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}

.textarea {
  width: 100%;
  height: 200rpx;
  background: #f5f5f5;
  border-radius: var(--border-radius);
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.form-footer {
  margin-top: 40rpx;
  display: flex;
  gap: 20rpx;
}

.form-footer .btn {
  flex: 1;
}