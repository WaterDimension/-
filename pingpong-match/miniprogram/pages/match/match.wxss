.container {
  padding: 30rpx;
  background: #f6f6f6;
  min-height: 100vh;
}

/* 筛选区域 */
.filter-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-header {
  margin-bottom: 20rpx;
}

.filter-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.filter-item {
  margin-bottom: 20rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

/* 级别范围滑块 */
.level-range {
  padding: 10rpx 0;
}

.range-slider {
  margin: 20rpx 0;
}

/* 选择器样式 */
.picker-value {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

/* 匹配列表 */
.match-list {
  margin-top: 20rpx;
}

.player-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.player-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.player-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.player-details {
  flex: 1;
}

.player-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.player-level,
.player-style {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.match-score {
  text-align: center;
  margin: 0 20rpx;
}

.score-label {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.score-value {
  font-size: 36rpx;
  color: #1296db;
  font-weight: bold;
}

.invite-btn {
  background: #1296db;
  color: #fff;
  font-size: 28rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  margin: 0;
}

.invite-btn:active {
  opacity: 0.8;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}