.chat-page {
  min-height: 100vh;
  background: var(--background-color);
}

.conversation-list {
  background: #ffffff;
}

.conversation-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.content {
  flex: 1;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
}

.time {
  font-size: 24rpx;
  color: var(--text-color-light);
}

.message {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color-light);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.unread {
  min-width: 36rpx;
  height: 36rpx;
  padding: 0 10rpx;
  background: var(--primary-color);
  color: #ffffff;
  border-radius: 18rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.empty-state {
  padding: 120rpx 0;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-color-light);
}

.loading {
  text-align: center;
  padding: 30rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-color-light);
}