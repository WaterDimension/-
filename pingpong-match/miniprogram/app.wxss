/* 全局样式 */
page {
  --primary-color: #1296db;
  --secondary-color: #91d5ff;
  --background-color: #f6f6f6;
  --text-color: #333333;
  --text-color-light: #999999;
  --border-radius: 12rpx;
  --card-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  
  background-color: var(--background-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.6;
}

/* 通用容器 */
.container {
  padding: 24rpx;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border-radius: var(--border-radius);
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--card-shadow);
}

/* 按钮样式 */
.btn {
  background: var(--primary-color);
  color: #ffffff;
  border-radius: var(--border-radius);
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
  text-align: center;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
}

/* 输入框样式 */
.input {
  border: 2rpx solid #e8e8e8;
  border-radius: var(--border-radius);
  padding: 20rpx;
  font-size: 28rpx;
  background: #ffffff;
}

/* 列表样式 */
.list-item {
  padding: 24rpx;
  border-bottom: 2rpx solid #e8e8e8;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: var(--border-radius);
  font-size: 24rpx;
  margin-right: 12rpx;
  background: var(--secondary-color);
  color: var(--primary-color);
}

/* 头像样式 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

/* flex布局工具类 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

/* 文本工具类 */
.text-primary {
  color: var(--primary-color);
}

.text-light {
  color: var(--text-color-light);
}

.text-center {
  text-align: center;
}

.text-bold {
  font-weight: bold;
}

/* 间距工具类 */
.mt-2 {
  margin-top: 16rpx;
}

.mb-2 {
  margin-bottom: 16rpx;
}

.ml-2 {
  margin-left: 16rpx;
}

.mr-2 {
  margin-right: 16rpx;
}